<h1>Create new post</h1>

<div class="row">
  <div class="col m6 offset-m3">
    <%= form_for(@post) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_field :body %>

      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
