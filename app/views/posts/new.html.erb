<h1 class="m-5">Create new post</h1>

<div class="row m-0">
  <div class="col-5 offset-1">
    <%= form_for(@post) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control m-2'  %>

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control m-2'  %>
      <%= link_to "Back", root_path , class: "btn btn-secondary m-5 float-left" %>
      <%= f.submit "Post", class: "btn btn-primary m-5 float-right" %>
    <% end %>
  </div>
</div>
